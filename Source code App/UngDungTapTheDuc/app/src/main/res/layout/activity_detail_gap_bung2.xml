<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailTheDuc.DetailGapBung2">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Gập Bụng"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/Pink"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/GIFPic"
        android:src="@drawable/detailgapbung2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerInParent="true"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnStartGapbung2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:text="START"
        android:textColor="@color/white"
        android:textSize="30dp">

    </info.hoang8f.widget.FButton>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnSkipGapBung2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:text="SKIP"
        android:textColor="@color/white"
        android:textSize="30dp">

    </info.hoang8f.widget.FButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TimerGapBung2"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnStartGapbung2"
        android:text="10"
        android:textAlignment="center"/>

</RelativeLayout>